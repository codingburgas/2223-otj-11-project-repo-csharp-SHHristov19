@model Univers.Models.Models.AdminModel

@{
    Layout = "../_AdminMenu.cshtml";
    TempData["Id"] = Model.UserId;
    TempData["Title"] = "Университети";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" />
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>

<style>
    body {
        background: #5349E3;
    }
</style>

<div class="modal fade" id="exampleModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Преглед на данни</h5>
            </div>
            <div class="modal-body">
                <ul class="list-group">
                    <li class="list-group-item active" aria-current="true">Информация</li>
                    <li class="list-group-item">Име: @Model.ChosenSpeciality.Name</li>
                    <li class="list-group-item">Тютор: @Model.ChosenSpeciality.Tutor.FirstName @Model.ChosenSpeciality.Tutor.MiddleName @Model.ChosenSpeciality.Tutor.LastName</li>
                    <li class="list-group-item">Степен на образование: @Model.ChosenSpeciality.Degree</li>
                    <li class="list-group-item">Семестри: @Model.ChosenSpeciality.Semesters</li>
                    <li class="list-group-item">Код: @Model.ChosenSpeciality.Code</li>
                </ul>
                <br><br>
            </div>
            <div class="modal-footer"> 
                @Html.ActionLink("Назад", "Specialities", "Admin", new { userId = $"{Model.UserId}", chosenUniversityId = Model.ChosenUniversity.Id, chosenFacultyId = Model.ChosenFaculty.Id }, new { @class = "btn btn-secondary" })
                @Html.ActionLink("Предмети", "Subjects", "Admin", new { userId = $"{Model.UserId}", chosenUniversityId = Model.ChosenUniversity.Id, chosenFacultyId = Model.ChosenFaculty.Id, chosenSpecialityId = Model.ChosenSpeciality.Id }, new { @class = "btn btn-primary" })
            </div>
        </div>
    </div>
</div>

<script>
    const myModal = new bootstrap.Modal('#exampleModal');
    setTimeout(() => { myModal.show(); }, 0)
</script>