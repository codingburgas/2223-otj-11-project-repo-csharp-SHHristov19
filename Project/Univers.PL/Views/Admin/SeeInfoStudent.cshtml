@model Univers.Models.Models.AdminModel

@{
    Layout = "../_AdminMenu.cshtml";
    TempData["Id"] = Model.UserId;
    TempData["Title"] = "Потребители";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" />
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>

<style>
    body {
        background: #5349E3;
    }
</style>

<div class="modal fade" id="exampleModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Преглед на данни</h5>
            </div>
            <div class="modal-body">
                <ul class="list-group">
                    <li class="list-group-item active" aria-current="true">Информация</li>
                    <li class="list-group-item">Име: @Model.ChosenStudent.User.FirstName @Model.ChosenStudent.User.MiddleName @Model.ChosenStudent.User.LastName</li>
                    <li class="list-group-item">Потребителско име: @Model.ChosenStudent.User.Username</li>
                    <li class="list-group-item">Имейл адрес: @Model.ChosenStudent.User.Email</li>
                    <li class="list-group-item">Адрес: @Model.ChosenStudent.User.Address</li>
                    <li class="list-group-item">Пол: @Model.ChosenStudent.User.Gender</li>
                    <li class="list-group-item">Телефонен номер: @Model.ChosenStudent.User.PhoneNumber</li>
                    <li class="list-group-item">ЕГН: @Model.ChosenStudent.Identity</li>
                    <li class="list-group-item">Гражданство: @Model.ChosenStudent.Citizenship</li>
                    <li class="list-group-item">Държава на раждане: @Model.ChosenStudent.CountryOfBirth</li>
                    <li class="list-group-item">Община на раждане: @Model.ChosenStudent.MunicipalityOfBirth</li>
                    <li class="list-group-item">Област на раждане: @Model.ChosenStudent.AreaOfBirth</li>
                    <li class="list-group-item">Град на раждане: @Model.ChosenStudent.CityOfBirth</li>
                    <li class="list-group-item">Дата на раждане: @Model.ChosenStudent.DateOfBirth.Value.ToString("dd.MM.yyyy")</li>
                    <li class="list-group-item">Образователно-квалификационна степен: @Model.ChosenStudent.Degree</li>
                    <li class="list-group-item">Форма на обучение: @Model.ChosenStudent.FormOfEducation</li>
                    <li class="list-group-item">Университет: @Model.ChosenStudent.NameOfUniversity</li>
                    <li class="list-group-item">Факултетен номер: @Model.ChosenStudent.FacultyNumber</li>
                    <li class="list-group-item">Специалност: @Model.ChosenStudent.Speciality</li>
                </ul>
                <br><br>
            </div>
            <div class="modal-footer">
                @Html.ActionLink("Назад", "Students", "Admin", new { userId = $"{Model.UserId}" }, new { @class = "btn btn-primary" })
            </div>
        </div>
    </div>
</div>

<script>
    const myModalAlternative = new bootstrap.Modal('#exampleModal')
    myModalAlternative.show()
</script>