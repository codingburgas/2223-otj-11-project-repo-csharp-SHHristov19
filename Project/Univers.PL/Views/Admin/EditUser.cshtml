@model Univers.Models.Models.AdminModel

@{
    Layout = "../_AdminMenu.cshtml";
    TempData["Id"] = Model.UserId;
    TempData["Title"] = "Потребители";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" />
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>

<style>
    body {
        background: #5349E3;
    }
</style>

@using (Html.BeginForm("Edit", "Admin", FormMethod.Post))
{
    <div class="modal fade" id="exampleModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg modal-dialog-scrollable">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Редактиране на данни</h5>
                </div>
                <div class="modal-body"> 
                  
                    @Html.HiddenFor(model => model.UserId)
                    @Html.HiddenFor(model => model.EditUser.Id) 
                    @Html.HiddenFor(model => model.EditUser.Gender) 
                    @Html.HiddenFor(model => model.EditUser.Staff.Id) 
                    
                    <div class="form-floating"> 
                        @Html.TextBoxFor(model => model.EditUser.FirstName, new { @class = "form-control", @id="floatingInput"})
                        @Html.LabelFor(model => model.EditUser.FirstName)
                        @Html.ValidationMessageFor(model => model.EditUser.FirstName, "", new { @class = "text-danger" })
                    </div>
                    
                    <br />
                    
                    <div class="form-floating">
                        @Html.TextBoxFor(model => model.EditUser.MiddleName, new { @class = "form-control", @id="floatingInput"})
                        @Html.LabelFor(model => model.EditUser.MiddleName)
                        @Html.ValidationMessageFor(model => model.EditUser.MiddleName, "", new { @class = "text-danger" })
                    </div> 
                    
                    <br />
                    
                    <div class="form-floating"> 
                        @Html.TextBoxFor(model => model.EditUser.LastName, new { @class = "form-control", @id="floatingInput"})
                        @Html.LabelFor(model => model.EditUser.LastName)
                        @Html.ValidationMessageFor(model => model.EditUser.LastName, "", new { @class = "text-danger" })
                    </div>
                    
                    <br />
                    
                    <div class="form-floating"> 
                        @Html.TextBoxFor(model => model.EditUser.Username, new { @class = "form-control", @id="floatingInput"})
                        @Html.LabelFor(model => model.EditUser.Username)
                        @Html.ValidationMessageFor(model => model.EditUser.Username, "", new { @class = "text-danger" })
                    </div> 
                    
                    <br />
                    
                    <div class="form-floating"> 
                        @Html.TextBoxFor(model => model.EditUser.Email, new { @class = "form-control", @id="floatingInput", placeholder="name@example.com"})
                        @Html.LabelFor(model => model.EditUser.Email)
                        @Html.ValidationMessageFor(model => model.EditUser.Email, "", new { @class = "text-danger" })
                    </div>
                    
                    <br />
                    
                    <div class="form-floating">
                        @Html.TextBoxFor(model => model.EditUser.Address, new { @class = "form-control", @id="floatingInput"})
                        @Html.LabelFor(model => model.EditUser.Address)
                        @Html.ValidationMessageFor(model => model.EditUser.Address, "", new { @class = "text-danger" })
                    </div>
                    
                    <br />
                    
                    <div class="form-floating">
                        @Html.TextBoxFor(model => model.EditUser.PhoneNumber, new { @class = "form-control", @id="floatingInput"})
                        @Html.LabelFor(model => model.EditUser.PhoneNumber)
                        @Html.ValidationMessageFor(model => model.EditUser.PhoneNumber, "", new { @class = "text-danger" })
                    </div>  

                    <br />
                    
                    <div class="form-floating">
                        
                        @Html.DropDownListFor(model => model.EditUser.Staff.Role, new List<SelectListItem>
                        {
                            new SelectListItem { Text = "Преподавател",  },
                            new SelectListItem { Text = "Тютор", },
                            new SelectListItem { Text = "Декан", },
                            new SelectListItem { Text = "Ректор", },
                            new SelectListItem { Text = "Администратор", },
                        }, new {@class = "form-select"})
                        @Html.Label("Роля")
                    </div>  
                </div>

                <div class="modal-footer">
                    @Html.ActionLink("Назад", "Users", "Admin", new { userId = $"{Model.UserId}" }, new { @class = "btn btn-secondary" })
                    <button class="btn btn-primary" type="submit">Запази</button>
                </div>

            </div>
        </div>
    </div>
}

<script>
    const myModalAlternative = new bootstrap.Modal('#exampleModal')
    myModalAlternative.show()
</script>