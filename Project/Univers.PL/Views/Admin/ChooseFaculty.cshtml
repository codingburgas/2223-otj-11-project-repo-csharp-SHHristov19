@model Univers.Models.Models.AdminModel

@{
    Layout = "../_AdminMenu.cshtml";
    TempData["Id"] = Model.UserId;
    TempData["Title"] = "Потребители";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" />
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>

<style>
    body {
        background: #5349E3;
    }
</style>

@using (Html.BeginForm("AddFacultyToStudent", "Admin", FormMethod.Post))
{
    <div class="modal fade" id="exampleModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg modal-dialog-scrollable">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Преглед на данни</h5>
                </div>
                <div class="modal-body">

                    <div class="form-floating">
                        @Html.HiddenFor(model => model.UserId)
                        @Html.HiddenFor(model => model.AddStudent.University.Id)

                        @Html.DropDownListFor(model => model.AddStudent.Faculty.Id, new SelectList(Model.Faculties, "Id", "Name"), new {@class = "form-select"})
                        @Html.LabelFor(model => model.AddStudent.Faculty)
                    </div>

                    <br><br>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary">Напред</button>
                </div>
            </div>
        </div>
    </div>
}
<script>
    const myModalAlternative = new bootstrap.Modal('#exampleModal')
    myModalAlternative.show()
</script>