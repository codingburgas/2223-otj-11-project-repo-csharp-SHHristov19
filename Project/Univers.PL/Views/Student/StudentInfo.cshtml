@model Univers.Models.Models.StudentModel

@{
    Layout = "../_StudentMenu.cshtml";
    TempData["Id"] = Model.Id;
    TempData["Title"] = "Лични данни";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" />

<style>
    body{
        background: #5349E3; 
    } 
</style>

<div style="max-width: 90%; margin-left: 3%; margin-right: 3%; margin-top: 2%;">

    <div class="fs-1 text-center">Лични данни</div>
     
    <div class="overflow-y-scroll" style="height: 75%; width: 88%; position: fixed;">

        <img src="@Url.Content(Model.User.Image)" style="width: 20%; height: 50%;" alt="Профилна снимка"/>

        <ul class="list-group list-group-horizontal mb-2">
            <li class="list-group-item">Име </li>
            <li class="list-group-item">@Model.User?.FirstName @Model.User?.MiddleName @Model.User?.LastName</li>
            </ul>
        <ul class="list-group list-group-horizontal mb-2">
            <li class="list-group-item">ЕГН </li>
            <li class="list-group-item">@Model.Identity</li>
        </ul>
        <ul class="list-group list-group-horizontal mb-2">
            <li class="list-group-item">Гражданин на </li>
            <li class="list-group-item">@Model.Citizenship</li>
        </ul>
        <ul class="list-group list-group-horizontal mb-2">
            <li class="list-group-item">Образователно-квалификационна степен </li>
            <li class="list-group-item">@Model.Degree</li>
        </ul>
        <ul class="list-group list-group-horizontal mb-2">
            <li class="list-group-item">Форма на обучение </li>
            <li class="list-group-item">@Model.FormOfEducation</li>
        </ul>
        <ul class="list-group list-group-horizontal mb-2">
            <li class="list-group-item">Факултетен №</li>
            <li class="list-group-item">@Model.FacultyNumber</li>
        </ul>
        <ul class="list-group list-group-horizontal mb-2">
            <li class="list-group-item">Специалност</li>
            <li class="list-group-item">@Model.Speciality</li>
        </ul>
        <ul class="list-group list-group-horizontal mb-2">
            <li class="list-group-item">Тютор на специалността</li>
            <li class="list-group-item">@Model.Tutor</li>
        </ul>
        <ul class="list-group list-group-horizontal mb-2">
            <li class="list-group-item">Декан на факултета</li>
            <li class="list-group-item">@Model.Dean</li>
        </ul>
        <ul class="list-group list-group-horizontal mb-2">
            <li class="list-group-item">Университет</li>
            <li class="list-group-item">@Model.NameOfUniversity</li>
        </ul>
        <ul class="list-group list-group-horizontal mb-2">
            <li class="list-group-item">Адрес на университета</li>
            <li class="list-group-item">@Model.AdressoOfUniversity</li>
        </ul>
        <ul class="list-group list-group-horizontal mb-2">
            <li class="list-group-item">Ректор на университета</li>
            <li class="list-group-item">@Model.Rector</li>
        </ul> 
                <p class="fs-2 align-top">Месторождение</p>

        <ul class="list-group list-group-horizontal mb-2">
            <li class="list-group-item">Дата на раждане</li>
            <li class="list-group-item">@Model.DateOfBirth.Value.ToString("dd.MM.yyyy")</li>
        </ul>
        <ul class="list-group list-group-horizontal mb-2">
            <li class="list-group-item">Държава </li>
            <li class="list-group-item">@Model.CountryOfBirth</li>
        </ul>
        <ul class="list-group list-group-horizontal mb-2">
            <li class="list-group-item">Населено място</li>
            <li class="list-group-item">град @Model.CityOfBirth, община @Model.MunicipalityOfBirth, област @Model.AreaOfBirth</li>
        </ul>

                <p class="fs-2 align-top">Контакти</p>
                 
        <ul class="list-group list-group-horizontal mb-2">
            <li class="list-group-item">Адрес </li>
            <li class="list-group-item">@Model.User?.Address</li>
        </ul>
        <ul class="list-group list-group-horizontal mb-2">
            <li class="list-group-item">Телефон </li>
            <li class="list-group-item">@Model.User?.PhoneNumber</li>
        </ul>
        <ul class="list-group list-group-horizontal mb-2">
            <li class="list-group-item">Потребителско име</li>
            <li class="list-group-item">@Model.User?.Username</li>
        </ul>
        <ul class="list-group list-group-horizontal mb-2">
            <li class="list-group-item">Email адрес</li>
            <li class="list-group-item">@Model.User?.Email</li>
        </ul> 
    </div>
</div>