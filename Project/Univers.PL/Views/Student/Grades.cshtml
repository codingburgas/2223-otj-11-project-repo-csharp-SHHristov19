@model Univers.Models.Models.StudentGradesModel

@{
    Layout = "../_StudentMenu.cshtml";
    TempData["Id"] = Model.StudentId;
    TempData["Title"] = "Оценки";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" />

<style>
    body {
        background: #5349E3;
    } 
</style>
 
<div style="max-width: 90%; margin-left: 3%; margin-right: 3%; margin-top: 2%;">

    <h1 class="text-center">Оценки</h1> <br /><br /> 

    <div class="overflow-y-scroll" style="height: 70%; width: 88%; position: fixed;">
        <br />
        <br />
        @if (Model == null)
        {
            <label class="fs-2 text-center" style="color: #ff03ad; width: 100%;">
                Все още няма оценки!
            </label>
            <br />
        }
        else
        {
            <br />

            <br />
            <div class="container text-center">
                <div class="row">
                    <div class="col-1 text-uppercase text-center">
                        Семестър
                    </div>
                    <div class="col-8 text-uppercase text-center">
                        Дисциплина
                    </div>
                    <div class="col text-uppercase text-center">
                        Оценки
                    </div> 
                </div>
            </div>
            <br />
            @foreach (var grade in Model.Grades)
            { 
                <div class="list-group" style="margin-bottom: 1%; margin-right: 3%;">
                    <button type="button" class="list-group-item list-group-item-action" aria-current="true">
                        <div class="container text-center">
                            <div class="row">
                                <div class="col-1 text-uppercase text-center">
                                    @grade.Semester
                                </div>
                                <div class="col-9 text-uppercase text-center">
                                    @grade.Subject
                                </div>
                                <div class="col text-uppercase text-center">
                                    @grade.Grade
                                </div> 
                            </div>
                        </div>
                    </button>
                </div> 
            }
        }
    </div>
</div> 