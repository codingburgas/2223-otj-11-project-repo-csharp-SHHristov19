@using Univers.PL.Utilities;
@model Univers.Models.Models.UserForgottenPasswordModel

<link rel="stylesheet" href="~/css/LoginAndRegistration.css" asp-append-version="true" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/cooltipz-css@2.2.2/cooltipz.css" /> 

@{
    var _utilities = new Utilities();
}

@using (Html.BeginForm("EmailAuthentication", "ForgottenPassword", FormMethod.Post, new { @class = "div1" }))
{
    <a href="@Url.Action("Login", "Login")"><img src="@Url.Content("~/images/Back.svg")" class="back" /></a>
    <br />
    <br />
    <img src="@Url.Content("~/images/Logo1.svg")" class="logo1" />
    <br />
    <br />
    <br />

    @Html.LabelFor(model => model.Email, "Въведете email адрес", new { @class = "lb1"})
    <br />

    <div>
        @{
            string emailErrorMessage = @_utilities.GetTheErrorMessage(@_utilities.HtmlContentToString(@Html.ValidationMessageFor(model => model.Email)));
            if (emailErrorMessage != null)
            {
                <span class="errorwindow" style="margin-left:17%" aria-label="@emailErrorMessage" data-cooltipz-dir="top" data-cooltipz-size="fit">
                    <div></div>@Html.TextBoxFor(model => model.Email, new { @class = "tb1 errortb"})
                </span>
            }
            else
            {
                @Html.TextBoxFor(model => model.Email, new { @class = "tb1"})
            }
        }
    </div> 

    <button class="button4" type="submit" style="margin-top: 20%;">Напред</button> 
}